# EditorConfig is awesome: https://EditorConfig.org

# 顶层 EditorConfig 文件
root = true

# 对所有文件生效
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# 对 Markdown 文件的特殊设置
[*.md]
trim_trailing_whitespace = false

# 对 YAML 文件的特殊设置
[*.yml]
indent_size = 2

# 对 JSON 文件的特殊设置
[*.json]
indent_size = 2

# 对 XML 文件的特殊设置
[*.xml]
indent_size = 2

# 对 Composer 文件的特殊设置
[composer.json]
indent_size = 4

# 对 PHP 文件的特殊设置
[*.php]
indent_style = space
indent_size = 4

# 对 Blade 模板文件的特殊设置（如果您的项目使用 Laravel）
[*.blade.php]
indent_size = 2

# 对 JavaScript 和 TypeScript 文件的特殊设置
[*.{js,ts}]
indent_size = 2

# 对 CSS, SCSS, LESS 文件的特殊设置
[*.{css,scss,less}]
indent_size = 2
